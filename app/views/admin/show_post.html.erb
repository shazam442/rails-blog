<div class="container">
    <h1 class="text-center">Admin Dashboard</h1>
    <%= render "admin/nav_links" %>

    <div class="d-flex flex-row-reverse justify-content-between mt-5">
        <div class="btn-group">
            <%= link_to "Edit", edit_post_path(@post), class:"btn btn-warning" %>
            <%= button_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
        </div>
    </div>

    <div class="row mt-1">
        <div class="d-flex align-items-center">
            <h3 class="column"><%= @post.title %></h3><%= link_to "Go To Post", post_path(@post), class:"ms-3 column" %>
        </div>
    </div>
    <div class="row mt-1">
        <p><strong>Author: <%= "#{@post.user.email} | #{@post.user.name} | #{pluralize(@post.views, "View")}" %></strong></p>
    </div>
    <div class="row mt-1">
        <div class="border border-3 p-2 border-secondary" style="min-height: 10rem">
            <%= @post.content.body %>
        </div>
    </div>
</div>